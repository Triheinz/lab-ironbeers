{{#if Name}}
  <h1> {{ name }} </h1>
{{/if}}

{{#each beersFromApi}}
<div class="card" style="width: 18rem;">
  <img src="{{this.image_url}}" class="card-img-top" alt="...">
  <div class="card-body">
    <h5 class="card-title">{{this.name}}{{this.tagline}}</h5>
    <p class="card-text">{{this.description}}</p>
  </div>
</div>
{{/each}}




